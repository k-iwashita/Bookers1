<% if flash[:notice] %>
  <div class="">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>New book</h2>
<%= render "error_messages" %>

<%= form_for(@book) do |f| %>
  <div class="">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
  </div>

  <div class="">
    <%= f.label :body, 'Body' %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>
